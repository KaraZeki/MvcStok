<table id="tblMusteri" class="table table-bordered">
    <thead>
        <tr>
            <th>Müşteri ID</th>
            <th>Müşteri ADI</th>
            <th>Müşteri Soyadı</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>


        </tr>
    </thead>


    <tbody>
        @foreach (var mst in Model)
        {
            <tr>
                <td>@mst.MUSTERIID</td>
                <td>@mst.MUSTERIAD</td>
                <td>@mst.MUSTERISOYAD</td>
                <td>@Html.ActionLink("SİL", "SIL", new { id = mst.MUSTERIID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinizden emin misiniz?')" })</td>
                <td><a href="/MUSTERI/MusteriGetir/@mst.MUSTERIID" class="btn btn-success">GUNCELLE</a></td>

            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/MusteriEkle" class="btn btn-primary">YENİ MÜŞTERİ EKLE  </a>

